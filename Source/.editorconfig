[*.cs]

# SA1133: Do not combine attributes
dotnet_diagnostic.SA1133.severity = suggestion
dotnet_diagnostic.SA1134.severity=silent

# SA1633: File should have header
dotnet_diagnostic.SA1633.severity = warning
dotnet_diagnostic.SA1503.severity=silent
csharp_using_directive_placement=inside_namespace:silent
csharp_prefer_simple_using_statement=true:warning

dotnet_diagnostic.SA1009.severity = suggestion
dotnet_diagnostic.SA1111.severity = suggestion

# SA1413: Use trailing comma in multi-line initializers
dotnet_diagnostic.SA1413.severity = suggestion
dotnet_diagnostic.SA1309.severity=suggestion
dotnet_diagnostic.SA1310.severity=silent
dotnet_diagnostic.SA1600.severity=error
dotnet_diagnostic.SA1602.severity=error
dotnet_diagnostic.SA1604.severity=error
dotnet_diagnostic.SA1603.severity=error
dotnet_diagnostic.SA1606.severity=error
dotnet_diagnostic.SA1609.severity=silent
dotnet_diagnostic.SA1610.severity=error
dotnet_diagnostic.SA1611.severity=error
dotnet_diagnostic.SA1612.severity=error
dotnet_diagnostic.SA1613.severity=error
dotnet_diagnostic.SA1614.severity=error
dotnet_diagnostic.SA1617.severity=suggestion
dotnet_diagnostic.SA1618.severity=error
dotnet_diagnostic.SA1620.severity=error
dotnet_diagnostic.SA1621.severity=error
dotnet_diagnostic.SA1622.severity=error
dotnet_diagnostic.SA1624.severity=warning
dotnet_diagnostic.SA1638.severity=error
dotnet_diagnostic.SA1637.severity=error
dotnet_diagnostic.SA1645.severity=error
dotnet_diagnostic.SA1646.severity=error
dotnet_diagnostic.SA1647.severity=error
insert_final_newline=true

# SA1101: Prefix local calls with this
dotnet_diagnostic.SA1101.severity = silent

# SA1124: Do not use regions
dotnet_diagnostic.SA1124.severity = silent

# CS8618: Ein Non-Nullable-Feld muss beim Beenden des Konstruktors einen Wert ungleich NULL enthalten. Erwägen Sie die Deklaration als Nullable.
dotnet_diagnostic.CS8618.severity = none

# CS8602: Dereferenzierung eines möglichen Nullverweises.
dotnet_diagnostic.CS8602.severity = none

# BL0005: Component parameter should not be set outside of its component.
dotnet_diagnostic.BL0005.severity = silent

# CS8601: Mögliche Nullverweiszuweisung.
dotnet_diagnostic.CS8601.severity = silent

# CS8629: Ein Werttyp, der NULL zulässt, kann NULL sein.
dotnet_diagnostic.CS8629.severity = silent

# SA1516: Elements should be separated by blank line
dotnet_diagnostic.SA1516.severity = none
